# Legal Education Contact Scraper - Configuration Template
# Copy this file to .env and fill in your API keys

# =============================================================================
# API Keys (All Optional - System works without them)
# =============================================================================

# Hunter.io - Email Finding Service
# Free tier: 50 searches/month
# Get your key at: https://hunter.io/api
HUNTER_API_KEY=your_hunter_api_key_here

# ZeroBounce - Email Validation Service
# Free tier: 100 validations
# Get your key at: https://www.zerobounce.net/
ZEROBOUNCE_API_KEY=your_zerobounce_api_key_here

# NeverBounce - Alternative Email Validation Service
# Free tier: 1,000 validations
# Get your key at: https://neverbounce.com/
NEVERBOUNCE_API_KEY=your_neverbounce_api_key_here

# Proxycurl - LinkedIn Enrichment Service
# Pricing: ~$0.08/profile
# Get your key at: https://nubela.co/proxycurl/
PROXYCURL_API_KEY=your_proxycurl_api_key_here

# =============================================================================
# Scraping Configuration
# =============================================================================

# Rate limiting (seconds between requests)
RATE_LIMIT_DELAY=5.0
MIN_DELAY=2.0
MAX_DELAY=10.0

# User agent rotation (true/false)
USE_RANDOM_USER_AGENT=true

# Enable headless browser mode (true/false)
HEADLESS_BROWSER=true

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=5

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file rotation (size in MB)
LOG_MAX_SIZE=10

# Number of log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# Data Processing Configuration
# =============================================================================

# Confidence score threshold (0-100)
MIN_CONFIDENCE_SCORE=50

# Email validation threshold (0-100)
MIN_EMAIL_SCORE=70

# Enable caching (true/false)
ENABLE_CACHING=true

# Cache expiration (hours)
CACHE_EXPIRATION_HOURS=24
